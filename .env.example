# GSL Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Application
APP_NAME=GSL Backend
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database - Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres
DATABASE_ECHO=false
USE_SUPABASE_AUTH=true

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Authentication
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=mp4,mov,avi,jpg,jpeg,png

# AI Models
AI_MODELS_DIR=models
CV_MODEL_PATH=models/gsl_recognition.tflite
STT_MODEL_NAME=openai/whisper-base

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
AI_RATE_LIMIT_REQUESTS=20

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30
AI_PROCESSING_TIMEOUT=10